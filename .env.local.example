# ===========================================
# Vitrifiye Quiz & Konfigüratör
# JSON Tabanlı Standalone Versiyon
# ===========================================

# Veritabanı Bağlantısı (MySQL/TiDB)
# Eğer JSON modu kullanıyorsanız bu zorunlu değil
DATABASE_URL="mysql://root:password@localhost:3306/vitrifiye_quiz"

# JWT Secret (Güvenlik için rastgele bir string oluşturun)
# Örnek: openssl rand -base64 32
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long"

# Uygulama Ayarları
VITE_APP_TITLE="Vitrifiye Quiz & Konfigüratör"
VITE_APP_LOGO="/logo.svg"
NODE_ENV="development"
PORT=3000

# OAuth Ayarları (Standalone modda opsiyonel - mock auth kullanılır)
OAUTH_SERVER_URL="https://api.manus.im"
VITE_OAUTH_PORTAL_URL="https://portal.manus.im"
VITE_APP_ID="standalone-local-dev"
OWNER_OPEN_ID="local-admin-001"
OWNER_NAME="Admin"

# Forge API (Manus platformu servisleri - standalone modda opsiyonel)
BUILT_IN_FORGE_API_URL="https://forge.manus.im"
BUILT_IN_FORGE_API_KEY=""
VITE_FRONTEND_FORGE_API_KEY=""
VITE_FRONTEND_FORGE_API_URL="https://forge.manus.im"

# Analytics (opsiyonel)
VITE_ANALYTICS_ENDPOINT=""
VITE_ANALYTICS_WEBSITE_ID=""

# ===========================================
# VERİ KAYNAĞI AYARLARI
# ===========================================

# Veri kaynağı modu: "json", "database", veya "shopify"
# JSON modu: Shopify olmadan test için (önerilen başlangıç)
# Database modu: MySQL ile çalışmak için
# Shopify modu: Gerçek Shopify mağazası entegrasyonu için
DATA_SOURCE="json"

# JSON veri dosyası yolu (DATA_SOURCE="json" ise)
JSON_DATA_PATH="./data/shopify-products.json"

# ===========================================
# SHOPIFY ENTEGRASYON AYARLARI
# (DATA_SOURCE="shopify" kullanıyorsanız doldurun)
# ===========================================

# Shopify mağaza URL'i (örn: your-store.myshopify.com)
SHOPIFY_STORE_URL=""

# Shopify Admin API Access Token
# Nasıl alınır: Shopify Admin → Apps → Develop apps → Create app
SHOPIFY_ACCESS_TOKEN=""

# Shopify API versiyonu
SHOPIFY_API_VERSION="2024-01"

# Shopify Webhook Secret (webhook doğrulama için)
SHOPIFY_WEBHOOK_SECRET=""

# ===========================================
# GELİŞMİŞ AYARLAR (Opsiyonel)
# ===========================================

# Log seviyesi (debug, info, warn, error)
LOG_LEVEL="info"

# CORS ayarları (geliştirme için)
CORS_ORIGIN="http://localhost:3000"

# Session süresi (saniye cinsinden, varsayılan: 7 gün)
SESSION_MAX_AGE="604800"
